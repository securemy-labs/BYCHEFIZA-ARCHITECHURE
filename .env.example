# Root .env.example - copy to .env and update values
# NOTE: Keep secrets out of source control. Use your secrets manager or CI secret store.

# General
NODE_ENV=development
APP_NAME=BYCHEFIZA
PORT=3000

# Backend / API
BACKEND_PORT=4000
DATABASE_URL=postgres://dbuser:dbpassword@db-host:5432/bychefiza_db
DB_HOST=db
DB_PORT=5432
DB_USER=dbuser
DB_PASSWORD=dbpassword
DB_NAME=bychefiza_db

# Auth
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=3600

# OAuth (if used)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# Cache / Broker
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Deployment / Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Docker / Compose
# Add any service-specific env vars below
